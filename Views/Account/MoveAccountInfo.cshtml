                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label text-right">Telephone Number</label>
                                    <div class="col-sm-3">
                                        <input class="form-control" type="text" asp-for="basic_telephonenumber" maxlength="10" readonly >
                                        @Html.ValidationMessageFor(m => m.basic_telephonenumber)
                                    </div>
                                </div>
