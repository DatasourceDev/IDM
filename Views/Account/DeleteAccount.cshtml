@model IDM.DTO.SearchDTO
@using IDM.Identity;
@using IDM.Extensions
@{
    ViewData["Title"] = "ลบบัญชีผู้ใช้";

}
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <div aria-live="polite" aria-atomic="true" style="position: relative;">
                <div class="page-title-box">
                    <div class="float-right" style="width:50%">
                        @if (ViewBag.ReturnCode != null)
                        {
                            @if (ViewBag.ReturnCode == ReturnCode.Success)
                            {
                                <div class="alert alert-success  border-0" role="alert">
                                    <i class="mdi mdi-check-circle-outline font-18 mr-1"></i>
                                    <strong class="font-18">@ViewBag.Message</strong>
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-danger border-0" role="alert">
                                    <i class="mdi mdi-close-circle-outline font-18 mr-1"></i>
                                    <strong class="font-18">@ViewBag.Message</strong>
                                </div>
                            }
                        }
                    </div>
                    <h4 class="page-title">ลบบัญชีผู้ใช้</h4>
                    <p class="text-muted">
                        Delete Account
                    </p>
                </div><!--end page-title-box-->
            </div>
        </div><!--end col-->
    </div>
    <!-- end page title end breadcrumb -->
    <!--end row-->
    <form class="form-horizontal form-parsley" asp-action="DeleteAccount" asp-controller="Account" id="theForm"  method="get">

        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="mt-0 header-title">ค้นหา</h4>
                        <div class="form-group row">
                            <div class="col-lg-9">
                                <label class="col-form-label">คำค้น</label>
                                <input class="form-control" type="text" placeholder="รหัสผู้ใช้, ชื่อ, นามสกุล, โทรศัพท์, อีเมล์" asp-for="text_search" required>
                            </div>
                            <div class="col-lg-2">
                                <label class="col-form-label">ประเภทผู้ใช้</label>
                                <select class="form-control" asp-for="usertype_search">
                                    <option value="@IDMUserType.affiliate">@IDMUserType.affiliate.toUserTypeName()</option>
                                    <option value="@IDMUserType.outsider">@IDMUserType.outsider.toUserTypeName()</option>
                                    <option value="@IDMUserType.staff">@IDMUserType.staff.toUserTypeName()</option>
                                    <option value="@IDMUserType.student">@IDMUserType.student.toUserTypeName()</option>
                                    <option value="@IDMUserType.temporary">@IDMUserType.temporary.toUserTypeName()</option>
                                </select>
                            </div>
                            <div class="col-lg-1">
                                <label class="col-form-label"><br /></label>
                                <button class="btn btn-primary btn-block" type="submit">ค้นหา</button>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-lg-12">
                                <button class="btn btn-danger" type="button" onclick="OnDelete()">ลบ</button>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-lg-12">
                                <div class="table-rep-plugin">
                                    <div class="table-responsive mb-0" data-pattern="priority-columns">
                                        <table id="tech-companies-1" class="table table-striped mb-0">
                                            <thead>
                                                <tr>
                                                    <th width="30px">
                                                        <div class="custom-control custom-checkbox">
                                                            <input type="checkbox" class="custom-control-input" id="chkall" onchange="OnCheckAll()">
                                                            <label class="custom-control-label" for="chkall"></label>
                                                        </div>
                                                    </th>
                                                    <th>Login Name</th>
                                                    <th>Display Name</th>
                                                    <th>Mail</th>
                                                    <th>Telephone Number</th>
                                                    <th>Jobcode</th>
                                                    <th>Citizen ID</th>
                                                    <th></th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @if (Model.lists != null)
                                                {
                                                    foreach (visual_fim_user item in Model.lists)
                                                    {
                                                        <tr>
                                                            <td>
                                                                <div class="custom-control custom-checkbox">
                                                                    <input type="checkbox" class="custom-control-input chk" id="chk-@item.basic_uid" value="@item.basic_uid">
                                                                    <label class="custom-control-label" for="chk-@item.basic_uid"></label>
                                                                </div>
                                                            </td>
                                                            <td>@item.basic_uid</td>
                                                            <td>@item.basic_displayname</td>
                                                            <td>@item.basic_mail</td>
                                                            <td>@item.basic_telephonenumber</td>
                                                            <td>@item.cu_jobcode</td>
                                                            <td>@item.cu_pplid</td>
                                                            <td>
                                                                <a href="#" onclick="deleteaccount('@item.basic_uid')"><i class="far fa-trash-alt text-danger font-16"></i></a>
                                                            </td>
                                                        </tr>
                                                    }
                                                }
                                                @if (Model.lists == null || Model.lists.Count() == 0)
                                                {
                                                    <tr>
                                                        <td colspan="8" class="text-center">ไม่พบข้อมูล</td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>


                    </div> <!-- end card-body -->
                </div> <!-- end card -->
            </div> <!-- end col -->
            <!-- end col -->
        </div>
    </form>
</div><!-- container -->
@section scripts{
    <script>
        function OnCheckAll() {
            if ($('#chkall').get(0).checked == true) {
                for (var i = 0; i < $('.chk').length; i++) {
                    $('.chk').get(i).checked = true;
                }
            }
            else {
                for (var i = 0; i < $('.chk').length; i++) {
                    $('.chk').get(i).checked = false;
                }
            }
        }
        function OnDelete() {
            var choose = '';
            for (var i = 0; i < $('.chk').length; i++) {
                if ($('.chk').get(i).checked == true) {
                    choose += $('.chk').get(i).value + ';';
                }
            }
            if (choose == '') {
                alert('กรุณาระบุบัญชีผู้ใช้');
                return;
            }
            if (confirm('ต้องการลบรายการ?')) {
                $.ajax({
                    type: 'Get',
                    url: '@Url.Action("Delete", "Account")?choose=' + choose,
                    success: function (data) {
                        if (data.result == 1) {
                            $('#theForm').submit();
                        }
                    },
                    error: function (XMLHttpRequest, errorThrown) {
                    }
                });
            }
        }
        function deleteaccount(id) {
            if (confirm('ต้องการลบรายการนี้?')) {
                $.ajax({
                    type: 'Get',
                    url: '@Url.Action("Delete", "Account")?choose=' + id,
                    success: function (data) {
                        if (data.result == 1) {
                            $('#theForm').submit();
                        }
                    },
                    error: function (XMLHttpRequest, errorThrown) {
                    }
                });
            }
        }
    </script>
}