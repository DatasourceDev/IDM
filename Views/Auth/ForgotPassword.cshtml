@model IDM.DTO.ForgotPasswordDTO
@{
    ViewData["Title"] = "ลืมรหัสผ่าน";
    Layout = "_LayoutBox";

}
<div class="container">
    <div class="row vh-100 ">
        <div class="col-12 align-self-center">
            <div class="auth-page">
                <div class="card auth-card shadow-lg">
                    <div class="card-body">
                        <div class="px-3">
                            <div class="text-center auth-logo-text">
                                <h4 class="mt-0 mb-3 mt-5">@LanguageLabel.GetLabel(Model.Languages, "Forgot Password")</h4>
                                <p class="text-muted mb-0">@LanguageLabel.GetLabel(Model.Languages, "Enter Username")</p>
                            </div> <!--end auth-logo-text-->
                            <form class="form-horizontal form-parsley" novalidate role="form" asp-action="ForgotPassword" asp-controller="Auth">
                                @Html.HiddenFor(m => m.LanguageCode)

                                <div class="form-group">

                                    <label for="GuestCode">@LanguageLabel.GetLabel(Model.Languages, "Username")</label>
                                    <input type="text" class="form-control" asp-for="Code" required>
                                    @Html.ValidationMessageFor(m => m.Code, "", new { @class = "text-danger" })
                                </div><!--end form-group-->

                                <div class="form-group mb-0 row">
                                    <div class="col-12 mt-2">
                                        @*<a href="@Url.Action("ResetPassword","Auth")" class="btn btn-gradient-primary btn-block waves-effect waves-light">ส่ง <i class="fas fa-sign-in-alt ml-1"></i></a>*@
                                        <button class="btn btn-gradient-primary btn-block waves-effect waves-light" type="submit"><i class="far fa-check-circle ml-1"></i> @LanguageLabel.GetLabel(Model.Languages, "Varify")</button>
                                    </div><!--end col-->
                                </div> <!--end form-group-->
                            </form><!--end form-->
                        </div><!--end /div-->

                        <div class="m-3 text-center text-muted">
                            <a href="@Url.Action("Login","Auth", new { lang = Model.LanguageCode })" class="text-primary ml-2">@LanguageLabel.GetLabel(Model.Languages, "Login")</a></p>
                        </div>
                    </div><!--end card-body-->
                </div><!--end card-->
            </div><!--end auth-page-->
        </div><!--end col-->
    </div><!--end row-->
</div>


