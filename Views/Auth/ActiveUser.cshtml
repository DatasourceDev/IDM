@model IDM.DTO.ActivateDTO
@{
    ViewData["Title"] = "เปิดใช้งานบัญชีผู้ใช้";
    Layout = "_LayoutBox";

}
<div class="container">
    <div class="row vh-100 ">
        <div class="col-12 align-self-center">
            <div class="auth-page">
                <div class="card auth-card shadow-lg">
                    <div class="card-body">
                        <form class="form-horizontal form-parsley" novalidate role="form" asp-action="ActiveUser" asp-controller="Auth">
                            <div class="px-3">
                                <div class="auth-logo-text">
                                    <h5 class="mt-0 mb-3 mt-5"><b>รหัสบัตรประชาชน</b></h5>                                   
                                    <input class="form-control" type="text" asp-for="cu_pplid" required data-parsley-type="number" maxlength="13">
                                    @Html.ValidationMessageFor(m => m.cu_pplid, "", new { @class = "text-danger" })
                                </div> <!--end auth-logo-text-->
                            </div><!--end /div-->
                            <div class="px-3">
                                <div class="auth-logo-text">
                                    <h5 class="mt-0 mb-3 mt-3"><b>รหัสนักศึกษา</b></h5>                                  
                                    <input class="form-control" type="text" asp-for="cu_jobcode" required data-parsley-type="number" maxlength="10">
                                    @Html.ValidationMessageFor(m => m.cu_jobcode, "", new { @class = "text-danger" })
                                </div> <!--end auth-logo-text-->
                            </div><!--end /div-->
                            <div class="m-3 text-center text-muted">
                                @if (ViewBag.ReturnCode != null)
                                {
                                    <div class="alert alert-success border-0" role="alert">
                                        @ViewBag.Message
                                    </div>
                                }
                                <button class="btn btn-gradient-primary waves-effect waves-light btn-block" type="submit">
                                    เปิดใช้งาน
                                </button>
                            </div>
                            <div class="m-3 text-center text-muted">
                                <a href="@Url.Action("LoginUser","Auth")" class="text-primary ml-2"></a></p>
                            </div>
                        </form>
                    </div><!--end card-body-->
                </div><!--end card-->
            </div><!--end auth-page-->
        </div><!--end col-->
    </div><!--end row-->
</div>


