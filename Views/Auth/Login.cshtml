@model IDM.DTO.LoginDTO
@{
    ViewData["Title"] = "เข้าสู่ระบบ";
    Layout = "_LayoutLogin";


}
<div class="container-fluid">
    <!-- Log In page -->
    <div class="row vh-100">
        <div class="col-lg-9 p-0 h-100vh d-flex justify-content-center auth-bg">
            <div class="accountbg d-flex align-items-center">
                <div class="account-title text-center text-white">
                    <img src="~/images/logo.svg" alt="">
                    <h1 class="text-white">จุฬาลงกรณ์มหาวิทยาลัย</h1>
                    <h4 class="mt-3 text-white"><span class="text-dark">Chulalongkorn University</span> </h4>
                    <div class="border w-25 mx-auto border-classic"></div>
                  
                    <p class="font-12 mt-3">
                        ศูนย์ ICT จุฬาลงกรณ์มหาวิทยาลัย
                        <br />
                        email: ictcenter@cu.ac.th
                    </p>
                    <div class="border w-25 mx-auto border-warning"></div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 pr-0">
            <div class="auth-page">
                <div class="card mb-0 shadow-none h-100">
                    <div class="card-body">
                        <div class="px-3">
                            <div class="mb-5">
                                <div class="row">
                                    <div class="col-sm-6">
                                        <a href="#" class="logo logo-admin">
                                            <span><img src="~/images/logo.svg" height="30" alt="logo" class="my-3"></span>
                                        </a>
                                    </div>
                                    <div class="col-sm-6 text-right">
                                        @*<h5>
                                            <a href="@Url.Action("Login","Auth", new { lang = LanguageCode.Thai})"><img src="~/metrica/assets/images/flags/thai_flag.jpg" alt="" class="ml-2" height="14" /></a>
                                            <a href="@Url.Action("Login","Auth", new { lang = LanguageCode.English})"><img src="~/metrica/assets/images/flags/us_flag.jpg" alt="" class="ml-2" height="14" /></a>
                                            <a href="@Url.Action("Login","Auth", new { lang = LanguageCode.Chinese})"><img src="~/metrica/assets/images/flags/china_flag.jpg" alt="" class="ml-2" height="14" /></a>
                                        </h5>*@
                                    </div>
                                </div>
                            </div>
                            <h2 class="font-weight-semibold font-22 mb-2">ยินดีต้อนรับเข้าสู่ระบบ<br /><span class="text-primary">ระบบบริหารจัดการบัญชีผู้ใช้สำหรับผู้ใช้งาน</span></h2>
                            <ul class="nav-border nav nav-pills" role="tablist">
                                <li class="nav-item">
                                    <a class="nav-link active font-weight-semibold" data-toggle="tab" href="#LogIn_Tab" role="tab">เข้าสู่ระบบ</a>
                                </li>
                            </ul>
                            <!-- Tab panes -->
                            <div class="tab-content">
                                <div class="tab-pane active p-3" id="LogIn_Tab" role="tabpanel">
                                    <form class="form-horizontal auth-form my-4 form-parsley" novalidate role="form" asp-action="Login" asp-controller="Auth">
                                        <div class="form-group">
                                            <label for="username">รหัสผู้ใช้</label>
                                            <input type="text" class="form-control" asp-for="UserName" required>
                                            @Html.ValidationMessageFor(m => m.UserName)

                                        </div><!--end form-group-->

                                        <div class="form-group">
                                            <label for="userpassword">รหัสผ่าน</label>
                                            <input type="password" class="form-control" asp-for="Password" required>
                                            @Html.ValidationMessageFor(m => m.Password)
                                        </div><!--end form-group-->

                                        <!--<div class="form-group row mt-4">
                                            <div class="col-sm-12 ">
                                                <a href="@Url.Action("ForgotPassword","Auth")" class="text-muted font-13"><i class="dripicons-lock"></i> ลืมรหัสผ่าน?</a>
                                            </div>--><!--end col-->
                                        <!--</div>--><!--end form-group-->

                                        <div class="form-group mb-0 row">
                                            <div class="col-12 mt-2">
                                                <button class="btn btn-primary btn-block waves-effect waves-light" type="submit"><i class="fas fa-sign-in-alt ml-1"></i> เข้าสู่ระบบ</button>
                                            </div><!--end col-->
                                        </div> <!--end form-group-->
                                        <!--<div class="form-group mb-0 row">
                                            <div class="col-12 mt-2">
                                                <a class="btn btn-gradient-success btn-block waves-effect waves-light" href="@Url.Action("Register","Auth")"><i class="fas fa-user-plus ml-1"></i> </a>
                                            </div>--><!--end col-->
                                        <!--</div>--> <!--end form-group-->
                                    </form><!--end form-->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
