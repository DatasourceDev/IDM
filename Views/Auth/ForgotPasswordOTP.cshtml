@model IDM.DTO.OTPDTO
@{
    ViewData["Title"] = "ระบุรหัส OTP";
    Layout = "_LayoutBox";

}
<div class="container">
    <div class="row vh-100 ">
        <div class="col-12 align-self-center">
            <div class="auth-page">
                <div class="card auth-card shadow-lg">
                    <div class="card-body">
                        <form class="form-horizontal form-parsley" novalidate role="form" asp-action="ForgotPasswordOTP" asp-controller="Auth">
                            @Html.HiddenFor(m => m.RefNo)
                            @Html.HiddenFor(m => m.LanguageCode)

                            <div class="px-3">
                                <div class="text-center auth-logo-text">
                                    <h4 class="mt-0 mb-3 mt-5">@LanguageLabel.GetLabel(Model.Languages, "Enter OTP")</h4>
                                    @if (ViewBag.ReturnCode != null)
                                    {
                                        <div class="alert alert-success border-0" role="alert">
                                            @ViewBag.Message
                                        </div>
                                    }
                                    <input class="form-control" type="text" asp-for="OTP" data-parsley-type="number">
                                    @Html.ValidationMessageFor(m => m.OTP, "", new { @class = "text-danger" })

                                </div> <!--end auth-logo-text-->
                            </div><!--end /div-->

                            <div class="m-3 text-center text-muted">
                                <button class="btn btn-gradient-primary waves-effect waves-light btn-block" type="submit">@LanguageLabel.GetLabel(Model.Languages, "Submit")</button>
                                <button class="btn btn-light waves-effect waves-light  btn-block" type="submit" value="true" name="Renew">@LanguageLabel.GetLabel(Model.Languages, "Request new OTP")</button>
                            </div>
                            <div class="m-3 text-center text-muted">
                                <a href="@Url.Action("Login","Auth", new { lang = Model.LanguageCode })" class="text-primary ml-2">@LanguageLabel.GetLabel(Model.Languages, "Login")</a></p>
                            </div>
                        </form>
                    </div><!--end card-body-->
                </div><!--end card-->
            </div><!--end auth-page-->
        </div><!--end col-->
    </div><!--end row-->
</div>


