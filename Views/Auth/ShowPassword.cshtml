@model IDM.DTO.ShowPasswordDTO
@{
    ViewData["Title"] = "รับรหัสผ่าน";
    Layout = "_LayoutBox";

}
<div class="container">
    <div class="row vh-100 ">
        <div class="col-12 align-self-center">
            <div class="auth-page">
                <div class="card auth-card shadow-lg">
                    <div class="card-body">
                        <div class="px-3">
                            <div class="text-center auth-logo-text">
                                <h4 class="mt-0 mt-5">รหัสผ่าน</h4>
                                <span class="text-eng ">Password</span>
                                <h4 class="mt-3 mb-3">@Model.Password</h4>
                            </div> <!--end auth-logo-text-->
                        </div><!--end /div-->

                        <div class="m-3 text-center text-muted">
                            <a href="@Url.Action("LoginUser","Auth")" class="btn btn-primary waves-effect waves-light btn-block" type="button">
                                <i class="fas fa-sign-in-alt ml-1"></i> เข้าสู่ระบบ
                                <span><br /></span>
                                <span class="text-eng mt-1">Login</span>
                            </a>
                        </div>
                    </div><!--end card-body-->
                </div><!--end card-->
            </div><!--end auth-page-->
        </div><!--end col-->
    </div><!--end row-->
</div>


