@model IDM.DTO.LoginDTO
@inject IDM.DAL.SpuContext _context
@{
    ViewData["Title"] = "เข้าสู่ระบบ";
    Layout = "_LayoutLogin";

    var setup = _context.table_setup.FirstOrDefault();
}
<div class="container-fluid">
    <!-- Log In page -->
    <div class="row vh-100">
        <div class="col-lg-5 pr-0">
            <div class="auth-page">
                <div class="card mb-0 shadow-none h-100">
                    <div class="card-body">
                        <div class="px-3">
                            <div class="mb-2">
                                <div class="row">
                                    <div class="col-sm-6">
                                        <a href="#" class="logo logo-admin">
                                            <span><img src="~/images/logo.svg" height="30" alt="logo" class="my-3"></span>
                                        </a>
                                    </div>
                                    <div class="col-sm-6 text-right">

                                    </div>
                                </div>
                            </div>
                            <h2 class="font-weight-semibold font-22 mb-2">
                                ยินดีต้อนรับเข้าสู่ระบบ
                                <br />
                                <span class="text-primary">บริหารจัดการบัญชีผู้ใช้</span>
                                <br />
                                <span class="text-eng ">User Management System</span>
                            </h2>
                            <ul class="nav-border nav nav-pills" role="tablist">
                                <li class="nav-item">
                                    <a class="nav-link active font-weight-semibold" data-toggle="tab" href="#LogIn_Tab" role="tab">กรุณาเข้าสู่ระบบ</a>
                                </li>
                            </ul>
                            <!-- Tab panes -->
                            <div class="tab-content">
                                <div class="tab-pane active p-3" id="LogIn_Tab" role="tabpanel">
                                    <span class="text-eng ">Please login to System.</span>
                                    <form class="form-horizontal auth-form my-4 form-parsley" novalidate role="form" asp-action="LoginUser" asp-controller="Auth">
                                        <div class="form-group">
                                            <label for="username">Username</label>
                                            <input type="text" class="form-control" asp-for="UserName" required>
                                            @Html.ValidationMessageFor(m => m.UserName)

                                        </div><!--end form-group-->

                                        <div class="form-group">
                                            <label for="userpassword">Password</label>
                                            <input type="password" class="form-control" asp-for="Password" required>
                                            @Html.ValidationMessageFor(m => m.Password)
                                        </div>
                                        <div class="form-group mb-0 row">
                                            <div class="col-12 mt-2">
                                                <button class="btn btn-primary btn-block waves-effect waves-light" type="submit"><i class="fas fa-sign-in-alt ml-1"></i> Login</button>
                                            </div><!--end col-->
                                        </div> <!--end form-group-->
                                        @*<div class="form-group row mt-4">
                                                <div class="col-sm-12 ">
                                                    <a href="@Url.Action("ActiveUser","Auth")" class="font-13"><i class="dripicons-lock"></i> เข้าสู่ระบบครั้งแรก</a>
                                                </div>
                                            </div>*@
                                        <div class="form-group mb-0 row">
                                            <div class="col-12 mt-2">
                                                <a class="btn btn-success btn-block waves-effect waves-light" href="@Url.Action("ActiveUser","Auth")">
                                                    <i class="fas fa-user-plus ml-1"></i> เปิดใช้งานบัญชีผู้ใช้ครั้งแรก
                                                    <span><br /></span>
                                                    <span class="text-eng mt-1">Activate account (First time Login)</span>
                                                </a>
                                            </div>

                                        </div>
                                    </form><!--end form-->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-7 p-0 h-100vh d-flex justify-content-center auth-bg">
            <div class="accountbg d-flex align-items-center">
                <div class="account-title text-center text-white">
                    <img src="~/images/logo.svg" alt="">
                    <h1 class="text-white">จุฬาลงกรณ์มหาวิทยาลัย</h1>
                    <h4 class="mt-3 text-white"><span class="text-dark">Chulalongkorn University</span> </h4>
                    <div class="border w-25 mx-auto border-classic"></div>
                    @if (setup != null && !string.IsNullOrEmpty(setup.first_page_description))
                    {
                        <p class="font-12 mt-3">
                            @Html.Raw(setup.first_page_description)
                        </p>
                    }
                    else
                    {
                        <p class="font-12 mt-3">
                            ศูนย์ ICT จุฬาลงกรณ์มหาวิทยาลัย
                            <br />
                            email: ictcenter@cu.ac.th
                        </p>
                    }
                    <div class="border w-25 mx-auto border-warning"></div>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    hr {
        margin-top: 0.1rem;
        margin-bottom: 0.1rem;
    }
</style>